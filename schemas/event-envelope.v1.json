{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://turingdynamics.com/schemas/event-envelope.v1.json",
  "title": "Event Envelope",
  "description": "Canonical event envelope for all events emitted by turing-payments-rails",
  "type": "object",
  "required": [
    "event_id",
    "event_type",
    "event_version",
    "occurred_at",
    "producer",
    "correlation_id",
    "entity_type",
    "entity_id",
    "payload"
  ],
  "properties": {
    "event_id": {
      "type": "string",
      "format": "uuid",
      "description": "Globally unique event identifier"
    },
    "event_type": {
      "type": "string",
      "description": "Event type name (e.g., PaymentSettled)"
    },
    "event_version": {
      "type": "integer",
      "minimum": 1,
      "description": "Schema version number"
    },
    "occurred_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO-8601 timestamp when event occurred"
    },
    "producer": {
      "type": "string",
      "const": "turing-payments-rails",
      "description": "System that produced this event"
    },
    "correlation_id": {
      "type": "string",
      "format": "uuid",
      "description": "Constant across entire payment lifecycle"
    },
    "causation_id": {
      "type": ["string", "null"],
      "format": "uuid",
      "description": "Event ID that caused this event (null for initiating events)"
    },
    "entity_type": {
      "type": "string",
      "const": "PAYMENT",
      "description": "Type of entity this event relates to"
    },
    "entity_id": {
      "type": "string",
      "description": "Immutable payment identifier (payment_id)"
    },
    "payload": {
      "type": "object",
      "description": "Event-specific payload (validated by event-specific schema)"
    }
  },
  "additionalProperties": false
}
