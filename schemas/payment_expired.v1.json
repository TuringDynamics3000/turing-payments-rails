{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://turing.com/schemas/payment_expired.v1.json",
  "allOf": [
    { "$ref": "envelope.v1.json" },
    {
      "properties": {
        "event_type": { "const": "PaymentExpired" },
        "payload": {
          "type": "object",
          "required": ["payment_id", "expired_at"],
          "properties": {
            "payment_id": { "type": "string" },
            "expired_at": { "type": "string", "format": "date-time" }
          }
        }
      }
    }
  ]
}
