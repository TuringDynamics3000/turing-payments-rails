{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://turingdynamics.com/schemas/payment-settled.v1.json",
  "title": "PaymentSettled Event",
  "description": "Emitted when a payment has been settled and ledger posting is required",
  "type": "object",
  "required": ["event_id", "event_type", "event_version", "occurred_at", "payload"],
  "properties": {
    "event_type": {
      "const": "PaymentSettled"
    },
    "event_version": {
      "const": 1
    },
    "payload": {
      "type": "object",
      "required": ["payment_id", "attempt_id", "external_ref", "settled_at", "ledger_posting"],
      "properties": {
        "payment_id": {
          "type": "string",
          "description": "Unique payment identifier"
        },
        "attempt_id": {
          "type": "string",
          "description": "Specific attempt that settled"
        },
        "external_ref": {
          "type": "string",
          "description": "Rail/processor reference"
        },
        "settled_at": {
          "type": "string",
          "format": "date-time",
          "description": "ISO-8601 timestamp of settlement"
        },
        "ledger_posting": {
          "type": "object",
          "required": ["debit_account_id", "credit_account_id", "amount"],
          "properties": {
            "debit_account_id": {
              "type": "string",
              "description": "Account to debit"
            },
            "credit_account_id": {
              "type": "string",
              "description": "Account to credit"
            },
            "amount": {
              "type": "number",
              "minimum": 0,
              "description": "Amount to post (positive number)"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  }
}
